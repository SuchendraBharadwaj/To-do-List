<!DOCTYPE html>
<html>
    <head>
        <title> To Do List</title>
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
       <div class="box" id="heading">
        <h1>  <%= list_title %> </h1>
       </div>
        
    <div class="box">
        
        <% for(var i=0;i<new_items.length;i++){ %>
            <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checked" value="<%=new_items[i]._id %>" onChange="this.form.submit()">
            <p> <%= new_items[i].name %> </p>
        </div>
        <input type="hidden" name="list_name" value=<%= list_title %> ></input> 
    </form>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="new_item" placeholder="New item">
            <button type="submit" name="button" value= <%= list_title %>> +</button>
        </form>
    </div>




    </body>
</html>